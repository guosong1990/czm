<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_2" >

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <include layout="@layout/title" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/content_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_1"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0.0dip"
            android:layout_marginTop="60.0dip"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:src="@drawable/money" />

            <TextView
                android:id="@+id/textview_gold_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:shadowColor="#ff000000"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="1.0"
                android:text="@string/my_gold"
                android:textColor="#ffffffff"
                android:textSize="12.0dip" />

            <TextView
                android:layout_width="100.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="@string/gold_tip"
                android:textColor="#ffffffff"
                android:textSize="10.0dip"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.0dip"
                android:textColor="#ffffffff"
                android:textSize="14.0dip" />

            <RelativeLayout
                android:layout_width="160.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/riddle_bg"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textview_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:paddingLeft="28.0dip"
                    android:paddingTop="15.0dip"
                    android:text="11111萨达多久啊三六九圣诞节啊看见的等ksajdsaljdasjdlsaldj接收到垃圾堆了撒"
                    android:textColor="#ff7b261e"
                    android:textSize="18.0sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.0dip"
                android:gravity="center_horizontal"
                android:orientation="horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="0.0dip"
            android:layout_marginTop="30.0dip"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageview_share"
                android:layout_width="62.0dip"
                android:layout_height="26.0dip"
                android:layout_marginTop="10.0dip"
                android:src="@drawable/share" />

            <ImageView
                android:id="@+id/imageview_tip"
                android:layout_width="62.0dip"
                android:layout_height="26.0dip"
                android:layout_marginTop="20.0dip"
                android:src="@drawable/tip" />

            <ImageView
                android:id="@+id/imageview_clear"
                android:layout_width="62.0dip"
                android:layout_height="26.0dip"
                android:layout_marginTop="20.0dip"
                android:src="@drawable/clear" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/answer_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_rl"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_answer"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_marginRight="3.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/box_right"
            android:gravity="center"
            android:shadowColor="#ffffffff"
            android:text="猜"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textColor="#ff000000"
            android:textSize="16.0dip"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer_ll"
        android:layout_marginTop="10.0dip"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearlayout_content_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0.0dip"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/linearlayout_content_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/linearlayout_content_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal" />
    </LinearLayout>
</RelativeLayout>